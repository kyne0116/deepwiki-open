{
  "embedder": {
    "client_class": "OllamaClient",
    "initialize_kwargs": {
      "host": "${OLLAMA_HOST}"
    },
    "model_kwargs": {
      "model": "nomic-embed-text"
    }
  },
  "retriever": {
    "top_k": 20
  },
  "text_splitter": {
    "split_by": "word",
    "chunk_size": 350,
    "chunk_overlap": 100
  }
}
